<Match>:
    MDScreen:
        md_bg_color: self.theme_cls.backgroundColor

        MDFloatLayout:
            id: r1
            adaptive_size: False
            orientation: 'horizontal'
            size_hint: 1, 0.3
            pos_hint: {"center_x": .5, "center_y": 0.85}

            MDFloatLayout:
                id: player_1_box
                adaptive_size: False
                orientation: 'horizontal'
                size_hint: 1, 0.2
                pos_hint: {"center_x": 0.5, "center_y": 0.75}

                MDLabel:
                    id: player_1_label
                    text:  "Player1"
                    font_style: "Headline"
                    font_size: "24sp"
                    pos_hint: {"center_x": 0.585, "center_y": .5}

                MDLabel:
                    id: player_2_label
                    text:  "Player2"
                    font_style: "Headline"
                    font_size: "24sp"
                    pos_hint: {"center_x": 0.788, "center_y": .5}

                MDLabel:
                    id: bot_1_label
                    text:  "Bot 1"
                    font_style: "Headline"
                    font_size: "24sp"
                    pos_hint: {"center_x": 1.14, "center_y": .5}

                MDLabel:
                    id: bot_2_label
                    text:  "Bot 2"
                    font_style: "Headline"
                    font_size: "24sp"
                    pos_hint: {"center_x": 1.34, "center_y": .5}

            MDFloatLayout:
                id: player_portraits_box
                adaptive_size: False
                orientation: 'horizontal'
                size_hint: 1, 0.8
                pos_hint: {"center_x": 0.5, "center_y": .25}

                MDExtendedFabButton:
                    id: player_1_button
                    size_hint: None, None
                    width: "128dp"
                    height: "128dp"
                    pos_hint: {"center_x": 0.11, "center_y": .5}
                    font_size: "50sp"

                    Image:
                        source: ''
                        opacity: 0
                        size_hint: 1, 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDExtendedFabButton:
                    id: player_2_button
                    size_hint: None, None
                    width: "128dp"
                    height: "128dp"
                    pos_hint: {"center_x": 0.3075, "center_y": .5}

                    Image:
                        source: ''
                        opacity: 0
                        size_hint: 1, 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDExtendedFabButton:
                    id: bot_1_button
                    size_hint: None, None
                    width: "128dp"
                    height: "128dp"
                    pos_hint: {"center_x": 0.675, "center_y": .5}
                    font_size: "50sp"

                    Image:
                        source: ''
                        opacity: 0
                        size_hint: 1, 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDExtendedFabButton:
                    id: bot_2_button
                    size_hint: None, None
                    width: "128dp"
                    height: "128dp"
                    pos_hint: {"center_x": 0.876, "center_y": .5}

                    Image:
                        source: ''
                        opacity: 0
                        size_hint: 1, 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDBoxLayout:
            id: box
            adaptive_size: False
            orientation: 'horizontal'
            size_hint: 0.4, None
            height: "125dp"
            pos_hint: {"center_x": .5, "center_y": .3}

            MDExtendedFabButton:
                id: continue_button
                size_hint: 1, None
                height: "80dp"
                pos_hint: {"center_x": .5, "center_y": .3}
                on_release: app.root.get_screen('select_player_character').start_button_clicked()
                MDExtendedFabButtonText:
                    text: "Start"