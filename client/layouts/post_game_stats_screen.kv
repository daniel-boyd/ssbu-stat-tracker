        orientation: 'horizontal'
        size_hint: 1, 0.1
        pos_hint: {"center_x": .5, "center_y": .9}
        
        MDLabel:
            id:stats_label
            text: "Post-Game Stats"
            font_style: "Display"
            halign: "center"
            font_size: "24sp"
            pos_hint: {"center_x": .5, "center_y": .5}

    MDFloatLayout:
