<StageList>:
    MDScreen:
        md_bg_color: self.theme_cls.backgroundColor
        size_hint: 1, 1

        MDGridLayout:
            cols: 3
            rows: 3
            padding: dp(10)
            spacing: dp(10)
            size_hint: 1, 1

            Button:
                size_hint: None, None
                size: 330, 187.5
                background_normal: r'resources/stage_images/battlefield.png'
                on_release: app.root.get_screen('match').stage_button_clicked('battlefield', self.background_normal)
                
            Button:
                size_hint: None, None
