<SelectPlayerCharacter3p>:
    MDScreen:
        md_bg_color: self.theme_cls.backgroundColor

        MDBoxLayout:
            id: back_btn_box
            adaptive_size: False
            spacing: "64dp"
            size_hint: None, None
            width: "85dp"
            height: "85dp"
            pos_hint: {"center_x": 0.06, "center_y": 0.9}

            MDExtendedFabButton:
                id: back_btn
                size_hint: None, None
                width: "85dp"
                height: "85dp"
                on_release: app.root.get_screen('select_player_character_3p').on_back_button_clicked()

                MDExtendedFabButtonIcon:
                    icon: "chevron-left"
                    size_hint: None, None
                    size: dp(100), dp(100)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDBoxLayout:
            id: box
            adaptive_size: False
            orientation: 'horizontal'
            spacing: "10dp"
            size_hint: 0.68, None
            height: "50dp"
            pos_hint: {"center_x": .5, "center_y": .75}

            MDLabel:
                id: player_1_label
                text:  "Player1"
                halign: "center"
                font_style: "Headline"
                font_size: "24sp"
                pos_hint: {"center_x": .25, "center_y": .7}

            MDLabel:
                id: player_2_label
                text:  "Player2"
                halign: "center"
                font_style: "Headline"
                font_size: "24sp"
                pos_hint: {"center_x": .5, "center_y": .7}

            MDLabel:
                id: player_3_label
                text:  "Player3"
                halign: "center"
                font_style: "Headline"
                font_size: "24sp"
                pos_hint: {"center_x": .75, "center_y": .7}

        MDBoxLayout:
            id: box
            adaptive_size: False
            orientation: 'horizontal'
            spacing: "230dp"
            width: "600dp"
            height: "400dp"
            pos_hint: {"center_x": 0.765, "center_y": .6}

            MDExtendedFabButton:
                id: player_1_button
                size_hint: None, None
                width: "128dp"
                height: "128dp"
                pos_hint: {"center_x": 0.0, "center_y": .5}
                on_release: on_release: app.root.get_screen('select_player_character_3p').player_1_button_clicked()
                font_size: "50sp"

                Image:
                    source: ''
                    opacity: 0
                    size_hint: 1, 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDExtendedFabButton:
                id: player_2_button
                size_hint: None, None
                width: "128dp"
                height: "128dp"
                pos_hint: {"center_x": .25, "center_y": .5}
                on_release: app.root.get_screen('select_player_character_3p').player_2_button_clicked()

                Image:
                    source: ''
                    opacity: 0
                    size_hint: 1, 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDExtendedFabButton:
                id: player_3_button
                size_hint: None, None
                width: "128dp"
                height: "128dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: app.root.get_screen('select_player_character_3p').player_3_button_clicked()

                Image:
                    source: ''
                    opacity: 0
                    size_hint: 1, 1
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDBoxLayout:
            id: box
            adaptive_size: False
            orientation: 'horizontal'
            spacing: "40dp"
            size_hint: 0.4, None
            height: "125dp"
            pos_hint: {"center_x": .5, "center_y": .3}

            MDExtendedFabButton:
                id: continue_button
                size_hint: 1, None
                height: "80dp"
                pos_hint: {"center_x": .5, "center_y": .3}
                on_release: app.root.get_screen('select_player_character').start_button_clicked()
                MDExtendedFabButtonText:
                    text: "Start"