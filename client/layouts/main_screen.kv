<MainScreen>:
 BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        Button:
            text: 'Start'
            size_hint_x: None
            width: '100dp'
        Label:
            text: 'SSBU Stat Tracker'
            font_size: '24sp'
            bold: True

    Label:
        text: "What we playin'?"
        font_size: '20sp'
        size_hint_y: None
        height: '40dp'

    BoxLayout:
        orientation: 'horizontal'
        spacing: '10dp'
        padding: '10dp'

        Button:
            text: 'Standard\n:)'
            on_press: root.on_mode_select('Standard')
        Button:
            text: 'Randoms\n?'
            on_press: root.on_mode_select('Randoms')
        Button:
            text: 'Handicap\n#'
            on_press: root.on_mode_select('Handicap')